<!-- SVG Roses -->
<svg class="rose" style="left:5%;animation-duration:14s" viewBox="0 0 24 24"><path fill="#ff1744" d="M12 2C8 2 4 6 4 10c0 6 8 12 8 12s8-6 8-12c0-4-4-8-8-8z"/></svg>
<svg class="rose" style="left:30%;animation-duration:12s" viewBox="0 0 24 24"><path fill="#ff1744" d="M12 2C8 2 4 6 4 10c0 6 8 12 8 12s8-6 8-12c0-4-4-8-8-8z"/></svg>
<svg class="rose" style="left:60%;animation-duration:16s" viewBox="0 0 24 24"><path fill="#ff1744" d="M12 2C8 2 4 6 4 10c0 6 8 12 8 12s8-6 8-12c0-4-4-8-8-8z"/></svg>
<svg class="rose" style="left:85%;animation-duration:13s" viewBox="0 0 24 24"><path fill="#ff1744" d="M12 2C8 2 4 6 4 10c0 6 8 12 8 12s8-6 8-12c0-4-4-8-8-8z"/></svg>

<script>

/* cursor heart trail */
document.addEventListener("mousemove",e=>{
const heart=document.createElement("div");
heart.className="cursor-heart";
heart.innerText="‚ù§";
heart.style.left=e.pageX+"px";
heart.style.top=e.pageY+"px";
document.body.appendChild(heart);
setTimeout(()=>heart.remove(),1000);
});

/* petal burst */
document.addEventListener("click",e=>{
for(let i=0;i<12;i++){
const petal=document.createElement("div");
petal.className="petal";
petal.innerText="üåπ";
petal.style.left=e.pageX+"px";
petal.style.top=e.pageY+"px";
petal.style.setProperty("--x",(Math.random()*200-100)+"px");
petal.style.setProperty("--y",(Math.random()*200-100)+"px");
document.body.appendChild(petal);
setTimeout(()=>petal.remove(),1200);
}
});

/* proposal style surprise */
function proposal(){
const msg=document.createElement("div");
msg.innerHTML="<h1 style='font-family:Great Vibes;color:#ff1744'>You Make Life Bloom üåπ</h1>";
msg.style.position="absolute";
msg.style.top="50%";
msg.style.left="50%";
msg.style.transform="translate(-50%,-50%)";
msg.style.background="white";
msg.style.padding="40px";
msg.style.borderRadius="20px";
msg.style.boxShadow="0 10px 40px rgba(0,0,0,0.3)";
document.body.appendChild(msg);
setTimeout(()=>msg.remove(),4000);
}

</script>

